{
  "latex-workshop.latex.recipe.default": "latexmk",
  "latex-workshop.latex.tools": [
    {
      "name": "make",
      "command": "make",
      "args": [],
      "env": {}
    },
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ],
      // if you put style files in subdir:
      //"env": {"TEXINPUTS": ".:./popets/:"}
    },
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "make",
      "tools": [
        "make"
      ]
    },
    {
      "name": "latexmk",
      "tools": [
        "latexmk"
      ],
    },
  ]
}
